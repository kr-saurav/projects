<%- include("../partials/header") %>
<div class="container">
	
<header class ="jumbotron">
	<div class="container">
	<h1>
		Welcome To YELPCAMP.......
	</h1>
	<p>
		<a class = "btn btn-primary btn-lg" href="/campgrounds/new">Add New      Campground</a>
	</p>
	</div>
</header>

 <div class="row text-center" style="display:flex; flex-wrap:wrap;">
  <% campgrounds.forEach(function(camp){ %>
	   <div class = "col-lg-3 col-md-4 col-sm-6">
	    <div class = "thumbnail">
		   <img src="<%= camp.image %>">
		   <div class = "caption">
			   <h4>
				   <%= camp.name %>
			   </h4>
			</div>
			<a href="/campgrounds/<%= camp._id %>" class="btn btn-primary btn-md">More Info</a>
		  </div>
	    </div>
    <% }); %>
  </div>
</div>

<%- include("../partials/footer") %>
